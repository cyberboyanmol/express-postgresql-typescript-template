{
  "name": "express-postgresql-typescript-template",
  "author": "Anmol Gangwar",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch ./src/server.ts ",
    "start": "yarn run build && cross-env NODE_ENV=production node -r  ./tsconfig-paths.js   ./dist/server.js",
    "build": "yarn clean  &&  tsc && yarn copy-templates && yarn  copy-keys ",
    "clean": "rimraf dist/",
    "copy-templates": "copyfiles -u 1 src/templates/**/*.ejs  dist/ ",
    "copy-keys": "copyfiles -u 1 src/keys/**/*.key  dist/ ",
    "format": "prettier --write \"./**/*.{js,ts,json}\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint  src/**/*.ts --fix",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:studio:dev": "dotenv -e .env.development -- npx prisma studio",
    "prisma:studio:prod": "dotenv -e .env.production -- npx prisma studio",
    "prisma:reset": "prisma migrate reset",
    "prisma:migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev",
    "prisma:migrate:prod": "dotenv -e .env.production -- npx prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "^4.16.2",
    "argon2": "^0.30.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.3",
    "prisma": "^4.16.2",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.3",
    "@types/nodemailer": "^6.4.8",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.44.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}
